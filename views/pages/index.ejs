<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Book App</title>
  </head>
  <body>
    <h1>Books Length <%= books.length %></h1>
    <% books.forEach((book) => { %>
      <%- include('./books/detail', { book }) %>
      <a href="/books/<%= book.id %>"><button>View details</button></a>
    <% }); %>
  </body>
</html>
