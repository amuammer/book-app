<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <title>Edit Book <%= book.title %></title>
  <%- include('../../layout/head') %>
</head>
  <body>
    <%- include('../../layout/header') %>
    <center>
    <form action="/books/<%= book.id %>?_method=PUT" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= book.title %>">
        <br/>
        <label for="author">Author</label>
        <input type="text" name="author" value="<%= book.author %>">
        <br/>
        <label for="image_url">image_url</label>
        <input type="text" id="image_url" name="image_url" value="<%= book.image_url %>">
        <br/>
        <label for="isbn">isbn</label>
        <input type="text" disabled id="isbn" name="isbn" value="<%= book.isbn %>">
        <br/>
        <label for="description">description</label>
        <br/>
        <textarea name="description"  id="description" rows="8" value="<%= book.description %>" cols="80"><%= book.description %></textarea>
        <br/>
        <input class="btn btn-black" type="submit" value="update">
    </form>
    </center>
  <%- include('../../layout/footer') %>
  </body>
</html>
